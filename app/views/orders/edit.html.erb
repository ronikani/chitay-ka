<h3 class="formi">Изменить статус заказа</h3>

<div class="form-container radius-box glassy-bg small-10 small-centered medium-8 large-6 columns ">
  <div class="ramka">
    <%= form_for (@order) , :html => { :multipart => true} do |f| %>
      <% if @order.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

          <ul>
          <% @order.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
     <% end %>

		<div class="mb1">
		    <%= f.label :status, "Статус заказа" %><br>
		    <p><%= f.select :status, [["Заказ обрабатывается", "Заказ обрабатывается"], ["Отправлен", "Отправлен"], ["Возврат", "Возврат"], ["Недоставлен", "Недоставлен"]], {}, id: "simple-example"   %></p>
		</div>

		<div class="actions">
		    <%= f.submit "Оформить"%>
		</div>

	<% end %>
</div>
<br>
		
<%= link_to 'Посмотреть', @order %> |
<%= link_to 'Назад', orders_path %>

<script>
      $(document).ready(function() {
    $('select#simple-example').select2();
    });
</script>
